<!--pages/change_password/change_password.wxml--> 
<view class="change_password-container"> 
  <view class="label"><label>更改密码</label></view> 
  <view class='formSubmit'> 
    <form bindsubmit="onSubmit" > 
    <view class='old'> 
      <text>原密码</text> 
      <input password='true' name='oldpwd' placeholder='请输入原密码' /> 
    </view> 
    <view class='new'> 
      <text>新密码</text> 
      <input password='true' name='newpwd' placeholder='请输入新密码' /> 
    </view> 
    <view class='ok'> 
      <text>确认新密码</text> 
      <input password='true' name='newpwd2' placeholder='请确认新密码' /> 
    </view> 
    <button type='primary' form-type='submit'>提交</button> 
  </form> 
  </view> 
</view>